<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- Actionbar color -->
        <item name="colorPrimary">@color/main_color</item>
        <!--Status bar color-->
        <item name="colorPrimaryDark">@color/main_color</item>
        <!--Accent color-->
        <item name="colorAccent">@color/main_color</item>
    </style>

    <style name="AppTheme.NoActionBar." parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- Actionbar color -->
        <item name="colorPrimary">@color/main_color</item>
        <!--Status bar color-->
        <item name="colorPrimaryDark">@color/main_color</item>
        <!--Accent color-->
        <item name="colorAccent">@color/main_color</item>
    </style>

    <!--Full screen-->
    <style name="AppTheme.Fullscreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Digest image style-->
    <style name="digest_image_style">
        <item name="android:layout_width">105dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="shape">Rectangle</item>
        <item name="rect_radius">3dp</item>
    </style>

    <!--photo set digest-->
    <style name="digest_main_image">
        <item name="android:layout_width">225dp</item>
        <item name="android:layout_height">154dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@color/light_gray</item>
        <item name="shape">Rectangle</item>
        <item name="rect_radius">3dp</item>
    </style>

    <!--Digest view style-->
    <style name="digest_view">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

</resources>
