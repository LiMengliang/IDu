<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/digest_view">
    <TextView
        android:id="@+id/multi_image_digest_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:lines="1"
        android:textSize="@dimen/media_text_size"
        android:textColor="@color/black"/>
    <LinearLayout
        android:id="@+id/image_row"
        android:layout_below="@id/multi_image_digest_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.redoc.widget.ShapedImageView
            android:id="@+id/multi_image_digest_image_a"
            style="@style/digest_image_style"/>
        <GridView
            android:layout_width="10dp"
            android:layout_height="match_parent"/>
        <com.redoc.widget.ShapedImageView
            android:id="@+id/multi_image_digest_image_b"
            style="@style/digest_image_style"/>
        <GridView
            android:layout_width="10dp"
            android:layout_height="match_parent"/>
        <com.redoc.widget.ShapedImageView
            android:id="@+id/multi_image_digest_image_c"
            style="@style/digest_image_style"/>
    </LinearLayout>
    <TextView
        android:id="@+id/multi_image_digest_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_row"
        android:layout_alignParentRight="true"
        android:paddingTop="5dp"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/black_overlay"/>
</RelativeLayout>