<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:idu="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_photo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".framework.view.photo.PhotoActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.redoc.widget.GradientShaderTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:text="@string/is_loading"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="22sp"
            idu:gradientWidthPercentage="0.7"
            idu:backForward="false"
            idu:speedPercentage="0.7" />
        <android.support.v4.view.ViewPager
            android:id="@+id/photos_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back_button"
        android:textSize="@dimen/media_text_size"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="32dp"
        android:layout_gravity="bottom" />
</RelativeLayout>
