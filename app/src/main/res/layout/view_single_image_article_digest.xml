<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    style="@style/digest_view">
    <ImageView
        android:id="@+id/single_image_digest_image"
        style="@style/digest_image_style"/>
    <RelativeLayout
        android:id="@+id/news_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/single_image_digest_image"
        android:paddingLeft="8dp">
        <TextView
            android:id="@+id/single_image_digest_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/media_text_size"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/single_image_digest_digest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/single_image_digest_title"
            android:paddingTop="8dp"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/small_text_size"
            android:lines="2"
            android:textColor="@color/black_overlay"/>
        <TextView
            android:id="@+id/single_image_digest_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingTop="8dp"
            android:paddingRight="5dp"
            android:layout_below="@id/single_image_digest_digest"
            android:lines="1"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/black_overlay"/>
    </RelativeLayout>
</RelativeLayout>