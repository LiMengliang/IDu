<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:idu="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.redoc.idu.settings.view.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/profiler_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_color">
            <com.redoc.widget.ShapedImageView
                android:id="@+id/icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:layout_centerInParent="true"
                idu:shape="Circle"
                idu:border_color="@color/white"
                idu:border_width="1dp"
                android:src="@drawable/icon">
            </com.redoc.widget.ShapedImageView>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/function_selection"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/profiler_area"
            android:padding="5dp">
            <com.redoc.idu.framework.view.widget.LabeledIconView
                android:id="@+id/saved"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/gray"/>
            <com.redoc.idu.framework.view.widget.LabeledIconView
                android:id="@+id/history"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/gray"/>
            <com.redoc.idu.framework.view.widget.LabeledIconView
                android:id="@+id/night_mode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/light_gray"/>
    </LinearLayout>

</RelativeLayout>
